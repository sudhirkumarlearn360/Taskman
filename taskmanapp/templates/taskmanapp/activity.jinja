{% extends 'taskmanapp/base.jinja' %} 
{% block content %}
<div class="col-sm-12" offset-1>
  <h4 class="text-center alert alert-info">Activity Feed</h4>
   <a href="{% url 'profile' %}"  class="btn btn-info" >Back to Home</a>


  {% if activity_list %}
  <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Activity</th>
          <th scope="col">Actions On</th>
        </tr>
      </thead>
      <tbody>
        {% for feed in activity_list %}
        <tr>
          <th scope="row">{{ forloop.counter }}</th>
          <td>{{ feed.activity }}</td>
          <td>{{ feed.added_on|date:"d M, Y G:i:s" }}</td>
        </tr>

        {% endfor %}
      </tbody>

  </table>

  {% else %}
  <h4 class="text-center alert alert-warning">No Records</h4>
 {% endif %}

<br>
<br>


</div>

{% endblock content %}
